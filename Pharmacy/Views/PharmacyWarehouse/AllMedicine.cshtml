@model dynamic
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="ru">

<body>

<div class="site-wrap">
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <a asp-controller="Home" asp-action="Index">Главная</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Продукты</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            <div class="row">
                @foreach (var medicine in ViewBag.AllMedicine)
                {
                    <div class="col-sm-6 col-lg-4 text-center item mb-4">
                        <a asp-controller="PharmacyWarehouse" asp-action="Medicine" asp-route-medicineId="@medicine.Id">
                            <img src="@medicine.Image" alt="Image" style="max-width: 370px;max-height: 270px;">
                        </a>
                        <h3 class="text-dark">
                            <a asp-controller="PharmacyWarehouse" asp-action="Medicine" asp-route-medicineId="@medicine.Id">@medicine.MedicineName</a>
                        </h3>
                        <p class="price">@medicine.Price Br</p>
                    </div>
                }
            </div>

            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <div class="site-block-27">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-secondary bg-image" style="background-image: url('/images/bg_2.jpg');">
        <div class="container">
            <div class="row align-items-stretch">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/images/bg_1.jpg');">
                        <div class="banner-1-inner align-self-center">
                            <h2>ЛЕКАРСТВЕННОЕ СТРАХОВАНИЕ</h2>
                            <p>
                                "Аптека" - единственная аптечная сеть, которая совместно со страховыми компаниями работает по программам корпоративного лекарственного страхования.
                            </p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/images/bg_2.jpg');">
                        <div class="banner-1-inner ml-auto  align-self-center">
                            <h2>ГАРАНТИЯ КАЧЕСТВА</h2>
                            <p>
                                Сотрудничаем только с надежными поставщиками, 100% гарантия качества всех наименований нашего ассортиментного перечня
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>


</div>
</body>

</html>